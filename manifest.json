{
    "manifest_version": 3,
    "name": "LinkedIntention | Block/Hide the LinkedIn Feed",
    "description": "Hides the LinkedIn home feed behind a ‘Show Feed’ button so you choose when to scroll.",
    "short_name": "LinkedIntention",
    "version": "1.0.1",
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/", "https://www.linkedin.com/feed/"],
            "js": ["src/content.js"],
            "css": ["src/content.css"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
